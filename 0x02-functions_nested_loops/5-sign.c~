#include "main.h"

/**
 * print_sign - checks sign
 * @n: the number to  be checked
 *
 */
int print_sign(int n)
{
  if (n > 0)
    {
      _putchar('+');
      return (1);
    }
  else if (n < 1)
    {
      _putchar('-');
      return (-1);
    }
  else if (n == 0)
    {
      _putchar('0');
      return (0);
    }

}
